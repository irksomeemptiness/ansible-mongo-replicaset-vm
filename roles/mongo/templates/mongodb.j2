storage:
  dbPath: /opt/mongodb
  journal:
    enabled: true
  engine: wiredTiger
net:
  port: {{ db_port }}
  bindIp: 0.0.0.0
operationProfiling:
  slowOpThresholdMs: 2100
  mode: off
replication:
  replSetName: {{ rs_name }}

security:
  keyFile: /opt/mongokey/key.key
security.authorization : enabled

systemLog:
   destination: file
   path: "/var/log/mongodb/mongod.log"

   component:
      query:
        verbosity: 2
      command:
        verbosity: 1